<%= simple_form_for @game do |g| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select ad category") %>
  <%= g.input :title, label: "Game Title" %>
  <%= g.input :publisher, label: "Published by" %>
  <%= g.input :rate , label: "Rate" %>
  <%= g.input :description, label: "Description" %>
  <%= g.button :submit %>
<% end %>